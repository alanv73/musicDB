<%- include("partials/header") %>

<div class="container my-5">
    <div class="card mx-auto" style="width: 30rem;">
        <div class="card-body">
            <h2 class="card-title"><%= band.name %></h2>
            <h6 class="card-subtitle mb-2 text-muted">Genre: <%= band.genre %></h6>
            <ul class="list-group-flush band-data">
                <li>Country of origin: <%= band.country %></li>
                <li>formed: <%= band.yr_formed %></li>
                <li>disbanded: <%= band.yr_disbanded %></li>
            </ul>
        </div>
        <% if(band.member_ids.length > 0){ %>
        <h6 class="card-subtitle ml-4">Band Members</h6>
        <ul class="list-group list-group-flush">
            <% band.member_ids.forEach((member)=>{ %>
            <form action="/artist/<%= band._id %>/musician/<%= member._id %>?_method=DELETE" method="POST">
                <li class="list-group-item">
                    <span class="mr-3"><input class="btn btn-danger" type="submit" class="del-button" value="X"></span>
                    <%= member.fname %> <%= member.lname %><%= member.status === 'deceased' ? ' (Deceased)' : '' %>
                </li>
            </form>
            <% }); %>
        </ul>
        <% }; %>
        <div class="card-body">
            <a href="/artist/<%= band._id %>/musician/new" class="card-link">Add Musician</a>
            <a href="/artists" class="card-link">Back to Index</a>
        </div>
    </div>
</div>

<%- include("partials/footer") %>