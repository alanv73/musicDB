<%- include("partials/header") %>
    <div class="container">
        <h1>
            <%= band.name %>
        </h1>
        <div class="container col-8 mx-auto">
            <h3>Edit Musician</h3>
            <form action="/artist/<%= band._id %>/musician/<%= musician._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input value="<%= musician.fname %>" type="text" class="form-control" name="musician[fname]"
                        placeholder="first name" required>
                </div>
                <div class="form-group">
                    <input value="<%= musician.lname %>" type="text" class="form-control" name="musician[lname]"
                        placeholder="last name" required>
                </div>
                <div class="form-group">
                    <select name="musician[status]" class="form-control">
                        <option value="not deceased" <%=musician.status=='not deceased' ? 'selected' : '' %>>not
                            deceased</option>
                        <option value="deceased" <%=musician.status=='deceased' ? 'selected' : '' %>>deceased</option>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <a href="/artist/<%= band._id %>">Back</a>
    </div>

    <%- include("partials/footer") %>