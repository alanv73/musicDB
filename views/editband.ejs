<%- include("partials/header") %>
    <div class="container">
        <h1>Edit Band</h1>
        <div class="container col-8 mx-auto">
            <form action="/artist/<%= band._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="band[name]">Band Name</label>
                    <input value="<%=band.name %>" type="text" class="form-control" name="band[name]" placeholder="Band
                    Name" required>
                </div>
                <div class="form-group">
                    <label for="band[yr_formed]">Year Formed</label>
                    <input value="<%= band.yr_formed %>" type="text" class="form-control" name="band[yr_formed]"
                        placeholder="year formed">
                </div>
                <div class="form-group">
                    <label for="band[yr_disbanded]">Year Disbanded</label>
                    <input value="<%= band.yr_disbanded %>" type="text" class="form-control" name="band[yr_disbanded]"
                        placeholder="year disbanded">
                </div>
                <div class="form-group">
                    <label for="band[country]">Country of Origin</label>
                    <input value="<%= band.country %>" type="text" class="form-control" name="band[country]"
                        placeholder="country of origin">
                </div>
                <div class="form-group">
                    <label for="band[genre]">Genre</label>
                    <input value="<%= band.genre %>" type="text" class="form-control" name="band[genre]"
                        placeholder="genre">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <br>
        <a href="/artist/<%= band._id %>">Back</a>
    </div>

    <%- include("partials/footer") %>